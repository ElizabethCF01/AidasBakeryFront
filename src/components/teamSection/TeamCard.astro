---
import { Image } from 'astro:assets'

interface Props {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props
---

<div class="flex flex-col md:flex-row w-full gap-10 md:gap-20">
  <div class="flex-1 aspect-square max-w-lg mx-auto">
    <Image
      src={image}
      inferSize={true}
      loading={'lazy'}
      alt={title}
      class="rounded-[100px] aspect-square border-2 border-beauty-bush-50 mx-auto"
    />
  </div>
  <div class="flex flex-1 flex-col justify-center gap-5">
    <h2 class="text-apricot-950 text-2xl md:text-5xl font-medium font-alegreya">{title}</h2>
    <p class="text-apricot-950 md:text-2xl">{description}</p>
  </div>
</div>

---
import { Image } from 'astro:assets'
import { getHeroData } from '@/api/hero'

import Badge from '@/components/icons/Badge.astro'

const { title, call_action, image_description, image } = await getHeroData()
const { url } = image.data.attributes
const imageSrc = `https://aida-api.webiz.se${url}`
---

<section class="bg-beauty-bush-300 min-h-[100dvh] flex justify-center items-center font-alegreya px-4 py-5">
  <div class="w-11/12 max-w-7xl flex flex-col md:flex-row justify-between gap-10 md:gap-20">
    <div class="w-full h-full md:max-w-[50%] max-h-[20%] relative">
      <Image
        src={imageSrc}
        inferSize={true}
        loading={'eager'}
        alt={image_description}
        class="rounded-full border-2 border-beauty-bush-50 mx-auto relative"
      />
      <Badge class="w-28 md:w-44 text-pirate-gold-600 absolute top-0 left-4">
        <p
          class="text-white text-center md:w-32 text-xl md:text-2xl absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 -rotate-45"
        >
          Postres Do√±a Aida
        </p>
      </Badge>
      <Badge
        class="w-24 md:w-32 text-pirate-gold-600 absolute bottom-0 right-0 md:bottom-8 md:right-12 animate-zoom-in"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          version="1"
          viewBox="0 0 131.4 131.4"
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 rotate-12"
        >
          <path fill="#fff2e3" d="M65.7 131.4A65.7 65.7 0 1 0 65.7 0a65.7 65.7 0 0 0 0 131.4Z"></path>
          <path fill="#fff2e3" d="M65.7 124.98a59.28 59.28 0 1 0 0-118.56 59.28 59.28 0 0 0 0 118.56Z"></path>
          <path
            fill="#cba15d"
            d="M65.7 103.04a44.53 44.53 0 0 1-44.48-44.48 3.43 3.43 0 0 1 6.85 0 37.67 37.67 0 1 0 75.24 0 3.44 3.44 0 0 1 6.86 0 44.53 44.53 0 0 1-44.47 44.48Z"
          ></path>
          <path
            fill="#cba15d"
            d="M52.87 28.35c-5.2 0-7.05 7.83-7.05 15.16 0 7.32 1.82 15.21 7.05 15.21 5.23 0 7.05-7.83 7.05-15.16 0-7.32-1.85-15.15-7.05-15.15v-.06ZM78.53 28.35c-5.2 0-7.05 7.83-7.05 15.16 0 7.32 1.85 15.21 7.05 15.21 5.2 0 7.05-7.83 7.05-15.16 0-7.32-1.85-15.15-7.05-15.15v-.06Z"
          ></path>
        </svg>
      </Badge>
    </div>

    <div class="flex flex-col justify-center">
      <h1 class="text-5xl md:text-7xl font-medium mb-8 text-beauty-bush-950 animate-slide-in-left">
        {title}
      </h1>
      <p class="text-xl uppercase px-6 py-2 border-2 border-beauty-bush-50 w-fit">
        {call_action}
      </p>
    </div>
  </div>
</section>
